apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: node-exporter-ingress
  namespace: grafana
  annotations:
    nginx.ingress.kubernetes.io/rewrite-target: /
spec:
  rules:
  - host: node-exporter.local
    http:
      paths:
      - path: /
        pathType: Prefix
        backend:
          service:
            name: node-exporter-service
            port:
              number: 9100
